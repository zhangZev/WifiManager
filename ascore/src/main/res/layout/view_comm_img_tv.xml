<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root_view_common_img_tv"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_img"
        android:layout_width="@dimen/comm_img_tv_img_width"
        android:layout_height="@dimen/comm_img_tv_img_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:cardCornerRadius="5dip"
        app:cardElevation="0dp"
        >
        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_default_car_list"
            />
        <ImageView
            android:id="@+id/img_left_top_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </androidx.cardview.widget.CardView>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_info_line1"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        style="@style/textThemeDark"
        app:layout_constraintTop_toTopOf="@id/layout_img"
        app:layout_constraintLeft_toRightOf="@id/layout_img"
        app:layout_constraintRight_toRightOf="parent"
        android:maxLines="2"
        android:layout_marginLeft="@dimen/margin_largge"
        android:ellipsize="end"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_info_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/textThemeDarkLarge"
        android:textColor="@color/text_color_danger"
        android:textSize="@dimen/text_size_xlarge"
        app:layout_constraintBottom_toBottomOf="@id/layout_img"
        app:layout_constraintLeft_toRightOf="@id/layout_img"
        android:layout_marginLeft="@dimen/margin_largge"
        android:singleLine="true"
        android:ellipsize="end"
        />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_info_line2"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        style="@style/textThemeDark"
        android:textColor="@color/text_color_secondary"
        app:layout_constraintTop_toBottomOf="@id/tv_info_line1"
        app:layout_constraintBottom_toTopOf="@id/tv_info_line3"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toRightOf="@id/layout_img"
        android:layout_marginLeft="@dimen/margin_largge"
        android:singleLine="true"
        android:gravity="center"
        android:ellipsize="end"
        />

</androidx.constraintlayout.widget.ConstraintLayout>