<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/app_background_white_corners"
        android:paddingBottom="25dip"
        android:paddingEnd="40dip"
        android:paddingStart="40dip"
        android:paddingTop="25dip">

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/color_3F73F4"
            android:visibility="gone" />

        <com.wanzhong.core.view.indicators.AVLoadingIndicatorView
            android:id="@+id/indicator"
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:visibility="visible"
            app:indicatorColor="@color/color_3F73F4"
            app:indicatorName="BallSpinFadeLoaderIndicator" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dip"
            android:text="正在加载，请稍后..."
            android:textColor="@color/color_666666"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>