<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_view_common_img_tv"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/layout_img"
            android:layout_width="@dimen/comm_img_tv_img_width"
            android:layout_height="@dimen/comm_img_tv_img_height">

            <ImageView
                android:id="@+id/img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/img_default_car_list" />

            <ImageView
                android:id="@+id/img_left_top_cover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_largge"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_line1"
                style="@style/textThemeDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textSize="@dimen/text_size_large"
                tools:text="测试数据" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_line2"
                style="@style/textThemeDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_normal"
                tools:text="测试数据" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_line4"
                style="@style/textThemeDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_normal"
                tools:text="测试数据" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_line5"
                style="@style/textThemeDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_normal"
                tools:text="测试数据" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_line3"
                style="@style/textThemeDarkLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:paddingTop="3dp"
                android:singleLine="true"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_normal"
                tools:text="测试数据" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_info_line6"
                style="@style/textThemeDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:maxLines="2"
                android:paddingTop="3dp"
                android:textColor="@color/text_color_secondary"
                android:textSize="@dimen/text_size_normal"
                tools:text="测试数据" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
